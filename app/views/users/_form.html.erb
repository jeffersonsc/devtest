<div class="container">
	<div class="row">
		<div class="col-lg-9">
			<%= simple_form_for @user , html: {class: 'form-horizontal'} do |f| %>
				<div class="form-group">
					<%= f.input :name %>
				</div>
				<div class="form-group">
					<%= f.input :email %>
				</div>
				<div class="form-group">
					<%= f.input :password %>
				</div>
				<div class="form-group">
					<%= f.input :password_confirmation %>
				</div>

				<div class="form-actions">
					<%= f.button :submit , class: 'btn btn-success' %>
				</div>
			<% end -%>
		</div>
	</div>
</div>