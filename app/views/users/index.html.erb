<div class="row">
	<div class="col-lg-9">
		<h1>Usuários</h1>
	</div>
	<div class="col-lg-3 poll-right">
		<%= link_to new_user_url, class: 'btn btn-primary' do %>
			Novo usuário
		<% end -%>
	</div>
</div>


<table class="table table-striped">
	<thead>
		<tr>
			<th>Nome</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| -%>
			<tr>
				<td><%= user.name %></td>
				<td><%= link_to "Detalhes", user %></td>
				<td><%= link_to "Editar", edit_user_url(user) %></td>
				<td><%= link_to "Deletar", user, method: :delete %></td>
			</tr>
		<% end -%>
	</tbody>
</table>